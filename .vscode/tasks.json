{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build HackMatrix",
      "type": "shell",
      "command": "xcodebuild",
      "args": [
        "-project", "${workspaceFolder}/HackMatrix.xcodeproj",
        "-scheme", "HackMatrix",
        "-configuration", "Debug",
        "clean", "build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Run GUI",
      "type": "shell",
      "command": "open",
      "args": ["${workspaceFolder}/DerivedData/HackMatrix/Build/Products/Debug/HackMatrix.app"],
      "dependsOn": "Build HackMatrix",
      "problemMatcher": [],
      "presentation": {
        "reveal": "never"
      }
    }
    /* {
      "type": "swift",
      "label": "Swift Build All - Release",
      "detail": "swift build --build-tests",
      "args": ["build", "--build-tests", "-c", "release"],
      "env": {},
      "cwd": "${workspaceFolder}",
      "group": "build"
    } */
  ]
}
