{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (SPM - Headless)",
      "type": "shell",
      "command": "swift",
      "args": ["build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$swiftc"]
    },
    {
      "label": "Build (Xcode - GUI)",
      "type": "shell",
      "command": "xcodebuild",
      "args": ["-scheme", "HackMatrix", "-configuration", "Debug", "build"],
      "group": "build",
      "problemMatcher": ["$swiftc"]
    },
    {
      "label": "Run GUI",
      "type": "shell",
      "command": "open",
      "args": ["${workspaceFolder}/DerivedData/HackMatrix/Build/Products/Debug/HackMatrix.app"],
      "dependsOn": "Build (Xcode - GUI)",
      "problemMatcher": []
    }
  ]
}
