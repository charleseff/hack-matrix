{
  // "sourcekit-lsp.serverPath": "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/bin/sourcekit-lsp",
  "sourcekit-lsp.toolchainPath": "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain",
  "files.associations": {
    "*.swift": "swift"
  },
  "search.exclude": {
    "**/DerivedData": true,
    "**/.build": true
  },
  // Python settings
  "python.defaultInterpreterPath": "${workspaceFolder}/python/venv/bin/python",
  "python.terminal.activateEnvironment": true,
  "python.analysis.extraPaths": [
    "${workspaceFolder}/python"
  ],
  "python.envFile": "${workspaceFolder}/python/.env",
  "peacock.color": "#42b883"
}